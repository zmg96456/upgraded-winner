  <build>
    <finalName>upgraded-winner</finalName>
    
    <!-- maven打包(war)或(jar) 时 ,只会找resources下的xml,我们mybatis的xml一般在mapper中,这样就会导致不能被打包进入 -->
		<!-- 设置文件可以被打包 -->
		<resources>
			<resource>
				<directory>src/main/resources</directory>
				<includes>
					<include>**/*.properties</include>
					<include>**/*.xml</include>
					<include>**/*.tld</include>
				</includes>
				<filtering>false</filtering>
			</resource>
			<resource>
				<directory>src/main/java</directory>
				<includes>
					<include>**/*.properties</include>
					<include>**/*.xml</include>
					<include>**/*.tld</include>
				</includes>
				<!--这里是false，用true会报 数据库连接 错误 -->
				<filtering>false</filtering>
			</resource>
		</resources>

		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-compiler-plugin</artifactId>
				<version>3.8.0</version>
				<configuration>
					<!-- 源代码的java版本 -->
					<source>1.8</source>
					<!-- 编译后生成class文件java版本 -->
					<target>1.8</target>
				</configuration>
			</plugin>

			<!-- 配置tomcat -->
			<plugin>
				<groupId>org.apache.tomcat.maven</groupId>
				<artifactId>tomcat7-maven-plugin</artifactId>
				<version>2.2</version>
				<configuration>
					<prot>8080</prot>
					<!-- 找到上面的路径(finalName 就是 maven_ssm) -->
					<path>/${project.build.finalName}</path>
					<!-- 这是是maven配置文件中的中的server标签的id -->
					<server>mytomcat</server>
					<!-- 这里是本地tomcat，如果是远程服务器可以改成对应的地址，实现自动部署 -->
					<url>http://localhost:8080/manager/text</url>
				</configuration>
				<executions>
					<execution>
						<!-- 打包阶段 -->
						<phase>package</phase>
						<!-- 运行目标 -->
						<goals>
							<goal>run</goal>
						</goals>
					</execution>
				</executions>
			</plugin>
		</plugins>
  </build>
